# Aaron's logrotate configuration file
# will keep appliance logs blah blah description
# new comment

/var/log/solace*/router*/command.log {
        size=50M
        rotate 5
        missingok
        compress
        delaycompress
        create 644 root root
        sharedscripts
        postrotate
          /bin/killall -HUP rsyslogd
          /bin/killall -HUP syslog-ng
        endscript
}
